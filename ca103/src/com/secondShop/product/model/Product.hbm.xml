<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.secondShop.product.model.ProductVO" table="PRODUCT" >
        
        <id name="productId" column="product_id">
            <generator class="sequence">
                <param name="product_seq">product_seq</param>
            </generator>  
        </id>
        <property name="memIdSale" column="mem_id_sale" />
        <property name="memIdBuy" column="mem_id_buy" />
        <property name="productName" column="product_name" />
       	<property name="productType" column="product_type" />
        <property name="productDetail" column="product_detail" />
        <property name="productPrice" column="product_price" />
        <property name="productStatus" column="product_status" />
        <property name="productScore" column="product_score" />
        <property name="productRating" column="product_rating" />
        <property name="productBiddingPrice" column="product_bidding_price" />
        <property name="productUpdateDate" column="product_update_date" />
        <property name="productSaleType" column="product_sale_type" />
        <property name="productEndBidding" column="product_end_bidding" />
        <property name="productAd" column="product_ad" />
        <property name="productDataStatus" column="product_data_status" />
        <property name="deliveryAddress" column="Delivery_address" />
        <property name="deliveryPhone" column="Delivery_phone" />
        <property name="deliveryName" column="Delivery_Name" />
        <property name="productBiddingWinPrice" column="product_bidding_win_price" />
        <property name="bproductSnapshot" column="product_Snapshot" />
    </class>
</hibernate-mapping>